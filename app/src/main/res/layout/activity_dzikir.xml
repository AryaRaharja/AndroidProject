<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DzikirActivity">

    <ImageView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:src="@drawable/gelombang"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvDoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Doa dan\n Dzikir\n App"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/doa"
        android:layout_toRightOf="@+id/tvDoa"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/tvDoa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Pilihan Doa\n dan Dzikir"
        android:textColor="#FB9903"
        android:layout_below="@+id/tvDoa"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvDoa2"
        android:layout_marginTop="325dp"
        android:layout_marginStart="40dp"
        android:text="Selengkapnya"
        android:backgroundTint="#959595"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvDoa2">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listDoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvDoa2"/>
</ScrollView>



</RelativeLayout>